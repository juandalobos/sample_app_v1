<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form mt-3">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="bg-light p-5 rounded text-center">
    <h1 class="display-4">Welcome to the Sample App</h1>
    <p class="lead">
      This is the home page for the
      <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a> sample application.
    </p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-lg" %>
  </div>

  <div class="text-center my-5">
    <%= image_tag "rails-logo.svg", alt: "Rails Logo", width: 350 %>
  </div>
<% end %>